<mvc:View controllerName="com.app.library.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:viz="sap.viz.ui5.controls" xmlns:layout="sap.ui.layout"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data">
    <Page id="page" title="{i18n>title}">
            <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}"
                height='100%' width="100%" vizType='donut'>
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{/books}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="Title"
                                value="{title}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="Quantity"
                                value="{quantity}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem uid="size" type="Measure"
                        values="Quantity" />
                    <viz.feeds:FeedItem uid="color" type="Dimension"
                        values="Title" />
                </viz:feeds>
                <viz:dependents>
                    <viz:Popover id="idPopOver"></viz:Popover>
                </viz:dependents>
            </viz:VizFrame>
    </Page>
</mvc:View>
